{
  "name": "deft-reader",
  "private": "true",
  "type": "commonjs",
  "scripts": {
    "cz": "bcz",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks && pnpm run stub",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache .",
    "typecheck": "echo typecheck",
    "server-dev": "turbo run dev --filter=./servers/*",
    "server-build": "turbo run build --filter=./servers/*",
    "build": "run-s server-build",
    "test-unit": "vitest run --workspace vitest.workspace.mts",
    "test-e2e": "vitest run --workspace vitest.workspace.e2e.mts",
    "test-docs": "pnpm run docs-build",
    "test": "run-s test-unit test-e2e test-docs",
    "docs": "pnpm --filter=docs run docs",
    "docs-build": "pnpm --filter=docs run docs-build",
    "docs-serve": "pnpm --filter=docs run docs-serve",
    "update-version": "tsx scripts/update-version.ts",
    "publish-script": "tsx scripts/publish-script.ts",
    "update": "ncu -uws",
    "stub": "turbo run stub"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.22.0",
    "@eslint/compat": "^1.1.0",
    "@eslint/js": "^9.6.0",
    "@playwright/test": "^1.45.1",
    "@pnpm/find-workspace-packages": "^6.0.9",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/archiver": "^6.0.2",
    "@types/bcrypt": "^5.0.2",
    "@types/convert-source-map": "^2.0.3",
    "@types/eslint__eslintrc": "^2.1.1",
    "@types/fs-extra": "^11.0.4",
    "@types/i18n": "^0.13.12",
    "@types/lodash": "^4.17.6",
    "@types/mime-types": "^2.1.4",
    "@types/mocha": "^10.0.7",
    "@types/multer": "^1.4.11",
    "@types/node": "~20.14.10",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/tough-cookie": "^4.0.5",
    "@types/unzipper": "^0.10.9",
    "@types/uuid": "^10.0.0",
    "@types/xml2js": "^0.4.14",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vitest/coverage-v8": "^2.0.2",
    "chalk": "^5.3.0",
    "consola": "^3.2.3",
    "cross-env": "^7.0.3",
    "eslint": "8.57.0",
    "eslint-plugin-i": "^2.29.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-n": "^17.9.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.8",
    "eslint-plugin-regexp": "^2.6.0",
    "express": "^4.19.2",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "globals": "^15.8.0",
    "i18next": "^23.11.5",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.7",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "msw": "^2.3.1",
    "nodemon": "^3.1.4",
    "npm-check-updates": "^16.14.20",
    "npm-run-all2": "^6.2.2",
    "oxlint": "^0.5.3",
    "playwright-chromium": "^1.45.1",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^14.1.2",
    "reflect-metadata": "^0.2.2",
    "rollup": "^4.18.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "sass": "^1.77.7",
    "semantic-release-vsce": "^5.7.2",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.1.0",
    "tsx": "^4.16.2",
    "turbo": "^2.0.6",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.0",
    "unbuild": "^2.0.0",
    "unplugin-swc": "^1.5.1",
    "vite": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.2",
    "vue": "^3.4.31",
    "vue-tsc": "^2.0.26"
  },
  "packageManager": "pnpm@9.5.0",
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "*/**/{src,types}/**/*.ts": [
      "eslint --cache --fix"
    ],
    "*/**/*.d.ts": [
      "eslint --cache --fix"
    ],
    "*/**/__tests__/**/*.ts": [
      "eslint --cache --fix"
    ]
  }
}
